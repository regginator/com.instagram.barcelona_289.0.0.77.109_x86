<?xml version="1.0" encoding="utf-8"?>
<layer-list
  xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <selector>
            <item android:state_pressed="true">
                <shape>
                    <corners android:radius="16.0dip" />
                    <stroke android:width="1.0px" android:color="@color/black_30_transparent" />
                </shape>
            </item>
            <item>
                <shape>
                    <corners android:radius="16.0dip" />
                    <stroke android:width="1.0px" android:color="@color/black_15_transparent" />
                </shape>
            </item>
        </selector>
    </item>
    <item>
        <inset android:insetLeft="1.0px" android:insetRight="1.0px" android:insetTop="1.0px" android:insetBottom="1.0px">
            <selector>
                <item android:state_pressed="true">
                    <shape>
                        <corners android:radius="16.0dip" />
                        <solid android:color="@color/pill_background_pressed" />
                    </shape>
                </item>
                <item>
                    <shape>
                        <corners android:radius="16.0dip" />
                        <solid android:color="@color/pill_background" />
                    </shape>
                </item>
            </selector>
        </inset>
    </item>
</layer-list>