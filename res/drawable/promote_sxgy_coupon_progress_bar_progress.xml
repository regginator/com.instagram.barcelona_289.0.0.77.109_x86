<?xml version="1.0" encoding="utf-8"?>
<layer-list
  xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:id="@android:id/background">
        <shape android:shape="rectangle">
            <solid android:color="@color/igds_highlight_background" />
            <corners android:radius="@dimen/abc_action_bar_elevation_material" />
        </shape>
    </item>
    <item android:id="@android:id/progress">
        <clip>
            <shape android:shape="rectangle">
                <corners android:radius="@dimen/abc_action_bar_elevation_material" />
                <solid android:color="@color/igds_primary_button" />
            </shape>
        </clip>
    </item>
</layer-list>