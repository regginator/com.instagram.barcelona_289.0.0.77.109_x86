<?xml version="1.0" encoding="utf-8"?>
<layer-list
  xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:id="@id/refreshable_progress_background">
        <shape android:shape="ring" android:useLevel="false" android:innerRadius="15.0dip" android:thickness="1.5dip">
            <solid android:color="@color/chat_sticker_chat_bubble_color" />
        </shape>
    </item>
    <item android:id="@id/refreshable_progress_track">
        <rotate android:fromDegrees="270.0" android:toDegrees="270.0" android:pivotX="50.0%" android:pivotY="50.0%">
            <shape android:shape="ring" android:useLevel="true" android:innerRadius="15.0dip" android:thickness="1.5dip">
                <solid android:color="@color/refreshable_progress_drawable_track" />
            </shape>
        </rotate>
    </item>
</layer-list>